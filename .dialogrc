#
# Run-time configuration file for dialog
#
# Automatically generated by "dialog --create-rc <file>"
#
#
# Types of values:
#
# Number     -  <number>
# String     -  "string"
# Boolean    -  <ON|OFF>
# Attribute  -  (foreground,background,highlight?,underline?,reverse?)

# Set aspect-ration.
aspect = 0

# Set separator (for multiple widgets output).
separate_widget = ""

# Set tab-length (for textbox tab-conversion).
tab_len = 0

# Make tab-traversal for checklist, etc., include the list.
visit_items = ON

# Show scrollbar in dialog boxes?
use_scrollbar = OFF

# Shadow dialog boxes? This also turns on color.
use_shadow = OFF

# Turn color support ON or OFF
use_colors = ON

# Screen color
screen_color = (WHITE,BLACK,OFF)

# Shadow color
shadow_color = (BLACK,BLACK,OFF)

# Dialog box color
dialog_color = (WHITE,BLACK,OFF)

# Dialog box title color
title_color = screen_color

# Dialog box border color
border_color = (WHITE,BLACK,OFF)

# Active button color
button_active_color = (BLACK,WHITE,OFF)

# Inactive button color
button_inactive_color = screen_color

# Active button key color
button_key_active_color = button_active_color

# Inactive button key color
button_key_inactive_color = screen_color

# Active button label color
button_label_active_color = button_active_color

# Inactive button label color
button_label_inactive_color = screen_color

# Input box color
inputbox_color = screen_color

# Input box border color
inputbox_border_color = screen_color

# Search box color
searchbox_color = screen_color

# Search box title color
searchbox_title_color = screen_color

# Search box border color
searchbox_border_color = shadow_color

# File position indicator color
position_indicator_color = screen_color

# Menu box color
menubox_color = screen_color

# Menu box border color
menubox_border_color = shadow_color

# Item color
item_color = screen_color

# Selected item color
item_selected_color = button_active_color

# Tag color
tag_color = screen_color

# Selected tag color
tag_selected_color = button_active_color

# Tag key color
tag_key_color = screen_color

# Selected tag key color
tag_key_selected_color = button_active_color

# Check box color
check_color = screen_color

# Selected check box color
check_selected_color = screen_color

# Up arrow color
uarrow_color = screen_color

# Down arrow color
darrow_color = screen_color

# Item help-text color
itemhelp_color = screen_color

# Active form text color
form_active_text_color = button_active_color

# Form text color
form_text_color = screen_color

# Readonly form item color
form_item_readonly_color = screen_color

# Dialog box gauge color
gauge_color = screen_color

# Dialog box border2 color
border2_color = border_color

# Input box border2 color
inputbox_border2_color = screen_color

# Search box border2 color
searchbox_border2_color = shadow_color

# Menu box border2 color
menubox_border2_color = shadow_color
